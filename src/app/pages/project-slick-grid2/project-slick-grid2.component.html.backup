<ng-container class="w-100">
    <div class="card border-0 rounded-0 h-100">
        <div class="card-header bg-white p-1" style="overflow-x: auto;">
            <div class="d-flex gap-1">
                <button nz-button nzType="default" nzSize="small"
                    (click)="ToggleSearchPanelNew($event); $event.stopPropagation()"
                    (mousedown)="$event.stopPropagation()" (touchstart)="$event.stopPropagation()"
                    (touchend)="$event.stopPropagation()" class="sticky-toggle-btn"
                    [attr.aria-label]="showSearchBar ? 'Ẩn tìm kiếm' : 'Hiện tìm kiếm'"
                    [attr.aria-expanded]="showSearchBar" type="button">
                    <nz-icon [nzType]="showSearchBar ? 'up' : 'down'" />
                </button>
                                    @for (parent of pms; track $index) {
                                    <nz-option-group [nzLabel]="parent.label">
                                        @for (child of parent.options; track $index) {
                                        <nz-option nzCustomContent="true"
                                            [nzLabel]="child.item?.Code + ' - ' + child.item?.FullName"
                                            [nzValue]="child.item.EmployeeID">
                                            {{ child.item.Code + " - " + child.item.FullName }}
                                        </nz-option>
                                        }
                                    </nz-option-group>
                                    }
                                </nz-select>
                            </nz-form-control>
                        </nz-form-item>
                        <nz-form-item class="mt-2">
                            <nz-form-label class="fs-12" [nzSpan]="24">Kỹ thuật</nz-form-label>
                            <nz-form-control [nzSpan]="24">
                                <nz-select name="technicalId" class="w-100" nzShowSearch nzAllowClear
                                    nzPlaceHolder="Chọn kỹ thuật thực hiện" [(ngModel)]="technicalId">
                                    @for (parent of users; track $index) {
                                    <nz-option-group [nzLabel]="parent.label">
                                        @for (child of parent.options; track $index) {
                                        <nz-option nzCustomContent="true"
                                            [nzLabel]="child.item?.Code + ' - ' + child.item?.FullName"
                                            [nzValue]="child.item.ID">
                                            {{ child.item.Code + " - " + child.item.FullName }}
                                        </nz-option>
                                        }
                                    </nz-option-group>
                                    }
                                </nz-select>
                            </nz-form-control>
                        </nz-form-item>
                        <nz-form-item class="mt-2">
                            <nz-form-label class="fs-12" [nzSpan]="24">Lĩnh vực dự án</nz-form-label>
                            <nz-form-control [nzSpan]="24">
                                <nz-select name="businessFieldId" class="w-100" nzShowSearch nzAllowClear
                                    nzPlaceHolder="Chọn lĩnh vực dự án" [(ngModel)]="businessFieldId">
                                    @for (item of businessFields; track $index) {
                                    <nz-option nzCustomContent="true" [nzLabel]="item.Code + ' - ' + item.Name"
                                        [nzValue]="item.ID">
                                        {{ item.Code + " - " + item.Name }}
                                    </nz-option>
                                    }
                                </nz-select>
                            </nz-form-control>
                        </nz-form-item>
                        <nz-form-item class="mt-2">
                            <nz-form-label class="fs-12" [nzSpan]="24">Khách hàng</nz-form-label>
                            <nz-form-control [nzSpan]="24">
                                <nz-select name="customerId" class="w-100" nzShowSearch nzAllowClear
                                    nzPlaceHolder="Chọn khách hàng" [(ngModel)]="customerId">
                                    @for (item of customers; track $index) {
                                    <nz-option nzCustomContent="true"
                                        [nzLabel]="item.CustomerCode + ' - ' + item.CustomerName" [nzValue]="item.ID">
                                        {{ item.CustomerCode + " - " + item.CustomerName }}
                                    </nz-option>
                                    }
                                </nz-select>
                            </nz-form-control>
                        </nz-form-item>
                        <nz-form-item class="mt-2">
                            <nz-form-label class="fs-12" [nzSpan]="24">Kiểu dự án</nz-form-label>
                            <nz-form-control [nzSpan]="24">
                                <nz-select name="projectTypeIds" class="w-100" [nzMaxTagCount]="2" nzAllowClear
                                    [nzMaxTagPlaceholder]="tagPlaceHolder" nzMode="multiple"
                                    nzPlaceHolder="Chọn kiểu dự án" [(ngModel)]="projectTypeIds">
                                    @for (item of projectTypes; track $index) {
                                    <nz-option [nzLabel]="item.ProjectTypeCode + ' - ' + item.ProjectTypeName"
                                        [nzValue]="item.ID"></nz-option>
                                    }
                                </nz-select>
                                <ng-template #tagPlaceHolder let-selectedList>...</ng-template>
                            </nz-form-control>
                        </nz-form-item>
                        <nz-form-item class="mt-2" *ngIf="isHide">
                            <nz-form-label class="fs-12" [nzSpan]="24">Trạng thái</nz-form-label>
                            <nz-form-control [nzSpan]="24">
                                <nz-select name="projecStatusIds" class="w-100" [nzMaxTagCount]="1" nzAllowClear
                                    [nzMaxTagPlaceholder]="tagPlaceHolder" nzMode="multiple"
                                    nzPlaceHolder="Chọn trạng thái" [(ngModel)]="projecStatusIds">
                                    @for (item of projecStatuses; track $index) {
                                    <nz-option [nzLabel]="item.StatusName" [nzValue]="item.ID"></nz-option>
                                    }
                                </nz-select>
                                <ng-template #tagPlaceHolder let-selectedList>...</ng-template>
                            </nz-form-control>
                        </nz-form-item>
                    </form>
                </div>
                <div class="card-footer bg-white p-1 d-flex gap-1 justify-content-end">
                    <button nz-button nzType="default" nzSize="small" (click)="setDefautSearch()">
                        Đặt lại
                    </button>
                    <button nz-button nzType="primary" nzSize="small" (click)="searchProjects()">
                        Tìm kiếm
                    </button>
                </div>
            </div>
        </nz-splitter-panel>

        <nz-splitter-panel nzDefaultSize="100%">
            <div class="card h-100 border-0 rounded-0">
                <div class="card-header bg-white p-1 d-flex align-items-center justify-content-between flex-wrap">
                    <!-- Bên trái: Các nút hành động -->
                    <div class="d-flex gap-1 flex-wrap">
                        <button nz-button nzType="default" nzSize="small" (click)="toggleSearchPanel()">
                            <nz-icon nzType="search"></nz-icon>
                        </button>
                        <button nz-button nzSize="small" class="fs-12 button button-succes btn-add"
                            (click)="updateProject(0)" *hasPermission="'N1,N13,N27'">
                            <img src="assets/icon/action_add_item_16.png" alt="Thêm mới" /> Thêm
                        </button>
                        <button class="fs-12 btn-edit" nz-button nzType="default" nzSize="small"
                            (click)="updateProject(1)" *hasPermission="'N1,N13,N27'">
                            <img src="assets/icon/action_edit_item_16.png" alt="Sửa"> Sửa
                        </button>
                        <button class="fs-12 btn-delete" nz-button nzType="default" nzSize="small" nzDanger
                            (click)="deletedProjects()" *hasPermission="'N1,N13,N27'">
                            <img src="assets/icon/action_delete_item_16.png" alt="Xóa" /> Xóa
                        </button>
                        <button nz-button nzType="default" nzSize="small" (click)="openFolder()">
                            <img src="assets/icon/tree_folder_16.png" alt="Cây thư mục" /> Cây thư mục
                        </button>
                        <button class="fs-12" nz-button nzType="default" nzSize="small"
                            (click)="openProjectWorkReportModal()">
                            <img src="assets/icon/list_project_report_16.png" alt="Danh sách báo cáo công việc"
                                class="me-1" /> Ds báo cáo công việc
                        </button>
                        <button class="fs-12" nz-button nzType="default" nzSize="small" (click)="openWorkItemModal()">
                            <img src="assets/icon/work_item_16.png" alt="Hạng mục công việc" class="me-1" /> Hạng mục công việc
                        </button>
                        <button class="fs-12" nz-button nzType="default" nzSize="small"
                            (click)="openProjectWorkerModal()">
                            <img src="assets/icon/project_woker_16.png" alt="Nhân công dự án" class="me-1" /> Nhân công dự án
                        </button>
                        <button class="fs-12" nz-button nzType="default" nzSize="small"
                            (click)="openProjectPartListModal()">
                            <img src="assets/icon/partlist_16.png" alt="Danh mục vật tư" class="me-1" /> Danh mục vật tư
                        </button>
                        <button class="fs-12" nz-button nzType="default" nzSize="small" (click)="exportExcel()">
                            <img src="assets/icon/action_export_excel_16.png" /> Xuất Excel
                        </button>

                        <!-- Context menu dropdown -->
                        <button nz-button nzType="default" nzSize="small" nz-dropdown [nzDropdownMenu]="contextMenu">
                            <nz-icon nzType="more"></nz-icon>
                        </button>
                        <nz-dropdown-menu #contextMenu="nzDropdownMenu">
                            <ul nz-menu>
                                <li nz-submenu nzTitle="Mức độ ưu tiên cá nhân">
                                    <ul>
                                        <li nz-menu-item (click)="setPersionalPriority(1)">1</li>
                                        <li nz-menu-item (click)="setPersionalPriority(2)">2</li>
                                        <li nz-menu-item (click)="setPersionalPriority(3)">3</li>
                                        <li nz-menu-item (click)="setPersionalPriority(4)">4</li>
                                        <li nz-menu-item (click)="setPersionalPriority(5)">5</li>
                                    </ul>
                                </li>
                                <li nz-menu-item (click)="openProjectEmployee()">
                                    <img src="assets/icon/participants_16.png" class="me-1" /> Người tham gia
                                </li>
                                <li nz-menu-item (click)="changeProject()">
                                    <img src="assets/icon/compare_project_16.png" class="me-1" /> Chuyển báo cáo công việc
                                </li>
                                <li nz-menu-item (click)="openProjectPartListProblemModal()">
                                    <img src="assets/icon/additional_goods_16.png" class="me-1" /> Hàng phát sinh
                                </li>
                                <li nz-menu-item (click)="openProjectRequest()">
                                    <img src="assets/icon/solution_16.png" class="me-1" /> Yêu cầu - Giải pháp
                                </li>
                                <li nz-menu-item (click)="openProjectTypeLinkDetail()">
                                    <img src="assets/icon/update_leader_16.png" class="me-1" /> Cập nhật Leader
                                </li>
                                <li nz-menu-item (click)="openProjectHistoryProblemModal()">
                                    <img src="assets/icon/problem_history_16.png" class="me-1" /> Lịch sử phát sinh
                                </li>
                                <li nz-menu-item (click)="openProjectStatus()" *hasPermission="'N1,N13,N27'">
                                    <img src="assets/icon/project_status_16.png" class="me-1" /> Trạng thái dự án
                                </li>
                                <li nz-menu-item (click)="openUpdateCurrentSituation()" *hasPermission="'N1,N13,N27'">
                                    <img src="assets/icon/update_status_16.png" class="me-1" /> Cập nhật hiện trạng
                                </li>
                                <li nz-submenu nzTitle="Cập nhật trạng thái" *hasPermission="'N1,N13,N27'">
                                    <ul>
                                        @for (status of projectStatuses; track status.ID) {
                                        <li nz-menu-item (click)="selectProjectStatus(status.ID)">{{ status.StatusName }}</li>
                                        }
                                    </ul>
                                </li>
                            </ul>
                        </nz-dropdown-menu>
                    </div>

                    <!-- Bên phải: Tìm kiếm -->
                    <div class="d-flex gap-1 align-items-center">
                        <input nz-input nzSize="small" placeholder="Nhập từ khóa" style="width: 250px"
                            [(ngModel)]="keyword" (keyup.enter)="searchProjects()" />
                        <button nz-button nzType="default" nzSize="small" (click)="searchProjects()" class="btn">
                            <nz-icon nzType="search"></nz-icon>
                        </button>
                    </div>
                </div>

                <div class="card-body p-0" style="height: calc(100vh - 120px); display: flex; flex-direction: column;">
                    <nz-splitter style="height: 100%; flex: 1;">
                        <!-- Bảng Master (bên trái) -->
                        <nz-splitter-panel [nzCollapsible]="true" nzResizable="true" [nzSize]="sizeTbMaster">
                            <div class="grid-container" id="grid-container-projects" style="height: 100%;">
                                <angular-slickgrid
                                    gridId="grvProjects"
                                    [columns]="columnDefinitions"
                                    [options]="gridOptions"
                                    [dataset]="dataset"
                                    (onAngularGridCreated)="angularGridReady($event.detail)"
                                    (onSelectedRowsChanged)="handleRowSelection($event.detail.eventData, $event.detail.args)"
                                    (onClick)="onCellClicked($event.detail.eventData, $event.detail.args)">
                                </angular-slickgrid>
                            </div>
                        </nz-splitter-panel>

                        <!-- Bảng Detail (bên phải) -->
                        <nz-splitter-panel *ngIf="sizeTbDetail !== '0'" [nzSize]="sizeTbDetail" [nzCollapsible]="true" nzResizable="true">
                            <div style="height: 100%; display: flex; flex-direction: column;">
                                <div class="d-flex justify-content-between align-items-center p-1 border-bottom">
                                    <div class="d-flex gap-2">
                                        <button nz-button nzType="text" nzSize="small" 
                                            [class.active]="activeTab === 'workreport'"
                                            (click)="switchTab('workreport')">
                                            Danh sách hạng mục
                                        </button>
                                        <button nz-button nzType="text" nzSize="small"
                                            [class.active]="activeTab === 'typelink'"
                                            (click)="switchTab('typelink')">
                                            Kiểu dự án
                                        </button>
                                    </div>
                                    <button nz-button nzType="text" nzSize="small" style="color: red;"
                                        (click)="closePanel()">
                                        <nz-icon nzType="close"></nz-icon>
                                    </button>
                                </div>

                                <!-- Tab Danh sách hạng mục -->
                                <div *ngIf="activeTab === 'workreport' && detailGridsReady" style="flex: 1; display: flex; flex-direction: column;">
                                    <div class="d-flex align-items-center p-1 gap-1 justify-content-end">
                                        <button class="fs-12 border" nz-button nzType="text" nzSize="small"
                                            style="background-color: lightyellow">
                                            Sắp hết hạn
                                        </button>
                                        <button class="fs-12 text-white" nz-button nzType="text" nzSize="small"
                                            style="background-color: orange">
                                            Chậm
                                        </button>
                                        <button class="fs-12 text-white" nz-button nzType="text" nzSize="small"
                                            style="background-color: red">
                                            Failed
                                        </button>
                                    </div>
                                    <div id="grid-container-workreport" style="flex: 1;">
                                        <angular-slickgrid
                                            gridId="grvWorkReport"
                                            [columns]="columnDefinitionsWorkReport"
                                            [options]="gridOptionsWorkReport"
                                            [dataset]="datasetWorkReport"
                                            (onAngularGridCreated)="angularGridWorkReportReady($event.detail)">
                                        </angular-slickgrid>
                                    </div>
                                </div>

                                <!-- Tab Kiểu dự án -->
                                <div *ngIf="activeTab === 'typelink' && detailGridsReady" style="flex: 1;">
                                    <div id="grid-container-typelink" style="height: 100%;">
                                        <angular-slickgrid
                                            gridId="grvTypeLink"
                                            [columns]="columnDefinitionsTypeLink"
                                            [options]="gridOptionsTypeLink"
                                            [dataset]="datasetTypeLink"
                                            (onAngularGridCreated)="angularGridTypeLinkReady($event.detail)">
                                        </angular-slickgrid>
                                    </div>
                                </div>
                            </div>
                        </nz-splitter-panel>
                    </nz-splitter>
                </div>
            </div>
        </nz-splitter-panel>
    </nz-splitter>
</ng-container>

<!-- Template cho modal chọn ngày thay đổi trạng thái -->
<ng-template #statusDateModalContent>
    <div style="padding: 20px;">
        <div class="mb-3">
            <label class="d-block mb-2">
                <span class="text-danger">*</span> Ngày thay đổi trạng thái:
            </label>
            <nz-date-picker [(ngModel)]="selectedStatusDate" nzFormat="dd/MM/yyyy"
                nzPlaceHolder="Chọn ngày thay đổi trạng thái" style="width: 100%;"></nz-date-picker>
        </div>
    </div>
</ng-template>